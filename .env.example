# ===========================================
# RideShare Backend - Environment Variables
# ===========================================
# Copy this file to .env and set values for your environment.
# Do not commit .env to version control.

# -------------------------------------------
# Gateway
# -------------------------------------------
GATEWAY_PORT=3000

# -------------------------------------------
# User Service (port 3001)
# -------------------------------------------
# PORT=3001
MONGODB_URI=mongodb://localhost:27017/rideshare_users
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d

# -------------------------------------------
# Ride Service (port 3002)
# -------------------------------------------
# PORT=3002
# RIDE_MONGODB_URI=mongodb://localhost:27017/rideshare_rides
# LOCATION_SERVICE_URL=http://localhost:3003
# JWT_SECRET= (same as user-service)
# ACCEPTANCE_TIMEOUT_SEC=60
# BASE_FARE=2.5
# RATE_PER_KM=1.2
# RATE_PER_MIN=0.25
# SURGE_MULTIPLIER=1
# KAFKA_RIDE_TOPIC=ride-events

# -------------------------------------------
# Location Service (port 3003)
# -------------------------------------------
# PORT=3003
# LOCATION_MONGODB_URI=mongodb://localhost:27017/rideshare_locations
# JWT_SECRET= (same as user-service for Socket.IO auth)

# -------------------------------------------
# Payment Service (port 3004)
# -------------------------------------------
# PORT=3004
# DATABASE_URL=postgresql://rideshare:rideshare_secret@localhost:5432/rideshare
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# -------------------------------------------
# Notification Service (port 3005)
# -------------------------------------------
# PORT=3005
# SENDGRID_API_KEY=
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# FCM_SERVER_KEY=

# -------------------------------------------
# Analytics Service (port 3006)
# -------------------------------------------
# PORT=3006

# -------------------------------------------
# Redis (shared)
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# -------------------------------------------
# Kafka (shared)
# -------------------------------------------
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=rideshare

# -------------------------------------------
# Gateway - downstream service URLs
# Use when gateway runs in Docker and needs to reach services by name
# -------------------------------------------
# USER_SERVICE_URL=http://localhost:3001
# RIDE_SERVICE_URL=http://localhost:3002
# LOCATION_SERVICE_URL=http://localhost:3003
# PAYMENT_SERVICE_URL=http://localhost:3004
# NOTIFICATION_SERVICE_URL=http://localhost:3005
# ANALYTICS_SERVICE_URL=http://localhost:3006

# -------------------------------------------
# Logging & environment
# -------------------------------------------
LOG_LEVEL=info
NODE_ENV=development
# SERVICE_NAME=rideshare
